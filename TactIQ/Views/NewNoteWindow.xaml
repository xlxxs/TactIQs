<Window x:Class="TactIQ.Views.NewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TactIQ.Views"
        mc:Ignorable="d"
        Title="Neue Notiz" Height="344" Width="383">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Neue Notiz erstellen" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Notiztext:" Width="100"/>
                <TextBox x:Name="NoteTextBox" Width="220" Height="80"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Typ:" Width="100"/>
                <ComboBox Width="221" Height="30" FontSize="13" x:Name="TypeBox">
                    <ComboBoxItem Content="Typ 1" IsSelected="True"/>
                    <ComboBoxItem Content="Typ 2"/>
                    <ComboBoxItem Content="Typ 3"/>
                </ComboBox>            
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Kategorie:" Width="100"/>
                <ComboBox Width="221" Height="30" FontSize="13" x:Name="CategoryBox">
                    <ComboBoxItem Content="Kategorie 1" IsSelected="True"/>
                    <ComboBoxItem Content="Kategorie 2"/>
                    <ComboBoxItem Content="Kategorie 3"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
                <TextBlock Text="Notiz markieren:" Width="100"/>
                <CheckBox FontSize="13" VerticalAlignment="Center" Margin="0,0,0,0" IsChecked="False" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" Name=""/>
            </StackPanel>

            <Button Grid.Row="1" Content="Speichern 💾" HorizontalAlignment="Center"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"
                    Padding="10,5" Margin="0,10,0,0" Width="200" BorderBrush="#3B82F6"
                    BorderThickness="1"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
