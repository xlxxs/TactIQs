<UserControl x:Class="TactIQ.Views.OpponentProfilesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="420" Width="770">
    <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="3.5*" />
            </Grid.ColumnDefinitions>

            <!-- Linke Liste -->
            <Border BorderBrush="#bbb" BorderThickness="1" CornerRadius="4" Margin="0,0,10,0">
            <ListBox x:Name="ProfileList"
                     ItemsSource="{Binding FilteredOpponents}"
                     SelectedItem="{Binding SelectedOpponent, Mode=TwoWay}"
                     FontWeight="SemiBold"
                     FontSize="14"
                     MouseDoubleClick="ProfileList_MouseDoubleClick"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="4">
                            <!-- Löschen-Button rechts -->
                            <Button Content="❌"
                                    DockPanel.Dock="Right"
                                    Margin="5,0,0,0"
                                    Width="25"
                                    Height="25"
                                    Background="#FFECECEC"
                                    BorderBrush="DarkGray"
                                    BorderThickness="1"
                                    Padding="0"
                                    ToolTip="Gegner löschen"
                                    Command="{Binding DataContext.DeleteOpponentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" />

                            <!-- Gegner-Name -->
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            </Border>

            <!-- Rechte Seite -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" Height="398">
                <!-- Suchfeld (optional noch ohne VM-Property) -->
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <TextBox Width="393" Height="28" Padding="4" FontSize="13"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock IsHitTestVisible="False" Text="Gegner suchen"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <Button Width="28" Height="28" Content="🔍"
                            Background="#e0e0e0" BorderBrush="#ccc" BorderThickness="1"
                            ToolTip="Suche starten"/>
                </StackPanel>

                <!-- Kategorie Dropdown (Platzhalter) -->
                <ComboBox Width="425" Height="30" FontSize="13" Margin="0,29,0,0">
                    <ComboBoxItem Content="Kategorie 1" IsSelected="True"/>
                    <ComboBoxItem Content="Kategorie 2"/>
                    <ComboBoxItem Content="Kategorie 3"/>
                </ComboBox>

                <!-- Nur markierte Profile -->
                <CheckBox Content="nur markierte Profile" FontSize="13"
                          VerticalAlignment="Center" Margin="0,30,0,0"
                          IsChecked="{Binding OnlyMarked}" />
                
                <!-- Neues Profil Button -->
                <Button Width="422" Height="40"
                        Background="#2C3E50"
                        Foreground="White"
                        BorderBrush="#3A8DFF"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"
                        HorizontalAlignment="Left" Margin="0,220,0,0"
                        Command="{Binding AddOpponentCommand}"
                        CommandParameter="Neues Profil">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="+" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Neues Profil" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
