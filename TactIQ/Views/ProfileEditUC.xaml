<UserControl x:Class="TactIQ.Views.ProfileEditUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TactIQ.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
     <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel>
                <TextBlock Name="tb_OpponentName" Text="Gegnerprofil Max Mustermann" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

                <TabControl>
                    <TabItem Header="Übersicht">
                        <StackPanel>
                            <TextBlock Text="Verein: SV Muster" FontSize="14" Margin="0,10"/>
                            <StackPanel>
                                <TextBlock Text="✅ Gute Vorhand"/>
                                <TextBlock Text="✅ Starker Unterschnitt"/>
                                <TextBlock Text="❌ Schwach gegen Topspin"/>
                                <TextBlock Text="❌ Fehlende Bewegung"/>
                            </StackPanel>

                            <DataGrid AutoGenerateColumns="False" Margin="0,20,0,0" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Datum" Binding="{Binding Date}" />
                                    <DataGridTextColumn Header="Wettkampf" Binding="{Binding Competition}" />
                                    <DataGridTextColumn Header="Ergebnis" Binding="{Binding Result}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Matches">
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" Margin="0,0,0,10" SelectionMode="Single" 
                                      SelectedIndex="1" Name="MatchDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Datum" Binding="{Binding Date}" Width="*" />
                                    <DataGridCheckBoxColumn Header="Sieg?" Binding="{Binding IsWin}" Width="*" />
                                    <DataGridTextColumn Header="Ergebnis" Binding="{Binding Result}" Width="*" />
                                    <DataGridTextColumn Header="Wettkampf" Binding="{Binding Competition}" Width="*" />
                                    <DataGridTextColumn Header="Bemerkungen" Binding="{Binding Notes}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="1" Content="+ Neues Match" HorizontalAlignment="Center" 
                                    Background="#2C3E50" Foreground="White" FontWeight="Bold" 
                                    Padding="10,5" Margin="0,10,0,0" Width="200" BorderBrush="#3B82F6"
                                    BorderThickness="1" Click="NewMatch_Click"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Notizen">
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" Margin="0,0,0,10" SelectionMode="Single"
                                      SelectedIndex="1" Name="NotesDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Notiz" Binding="{Binding Text}" Width="2*" />

                                    <DataGridTemplateColumn Header="Typ" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsValid}" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="Kategorie" Binding="{Binding Type}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="1" Content="+ Neue Notiz" HorizontalAlignment="Center"
                                    Background="#2C3E50" Foreground="White" FontWeight="Bold"
                                    Padding="10,5" Margin="0,10,0,0" Width="200" BorderBrush="#3B82F6"
                                    BorderThickness="1" Click="NewNote_Click"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>     
    </Grid>
</UserControl>
