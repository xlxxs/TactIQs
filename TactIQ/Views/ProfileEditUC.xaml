<UserControl x:Class="TactIQ.Views.ProfileEditUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TactIQ.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
     <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel>
                <TextBlock Name="tb_OpponentName" Text="Gegnerprofil Max Mustermann" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />

                <TabControl>
                    <TabItem Header="Übersicht">
                        <StackPanel>
                            <TextBlock Text="Verein: SV Muster" FontSize="14" Margin="0,10"/>
                            <StackPanel>
                                <TextBlock Text="✅ Gute Vorhand"/>
                                <TextBlock Text="✅ Starker Unterschnitt"/>
                                <TextBlock Text="❌ Schwach gegen Topspin"/>
                                <TextBlock Text="❌ Fehlende Bewegung"/>
                            </StackPanel>

                            <DataGrid AutoGenerateColumns="False" Margin="0,20,0,0" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Datum" Binding="{Binding Date}" />
                                    <DataGridTextColumn Header="Ergebnis" Binding="{Binding Result}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Matches">
                    </TabItem>
                    <TabItem Header="Notizen">
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>     
    </Grid>
</UserControl>
