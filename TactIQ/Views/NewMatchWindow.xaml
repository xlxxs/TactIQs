<Window x:Class="TactIQ.Views.NewMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TactIQ.Views"
        mc:Ignorable="d"
        Title="Neues Match" Height="406" Width="357">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Neues Match erstellen" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Datum:" Width="100"/>
                <DatePicker x:Name="MatchDatePicker" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Ergebnis:" Width="100"/>
                <TextBox x:Name="ResultBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Wettkampf:" Width="100"/>
                <TextBox x:Name="CompetitionBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Bemerkung:" Width="100"/>
                <TextBox x:Name="NotesBox" Width="200" Height="80"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
                <TextBlock Text="Match markieren:" Width="100"/>
                <CheckBox FontSize="13" VerticalAlignment="Center" Margin="0,0,0,0" IsChecked="False" VerticalContentAlignment="Stretch" HorizontalAlignment="Left"/>
            </StackPanel>

            <Button Grid.Row="1" Content="Speichern 💾" HorizontalAlignment="Center"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"
                    Padding="10,5" Margin="0,10,0,0" Width="200" BorderBrush="#3B82F6"
                    BorderThickness="1" 
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
