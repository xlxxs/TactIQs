<Window x:Class="TactIQ.Views.NewMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Match" Height="406" Width="357"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Neues Match erstellen" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Datum:" Width="100"/>
                <DatePicker SelectedDate="{Binding Date}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Ergebnis:" Width="100"/>
                <TextBox Text="{Binding Result}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Wettkampf:" Width="100"/>
                <TextBox Text="{Binding Competition}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Bemerkung:" Width="100"/>
                <TextBox Text="{Binding Notes}" Width="200" Height="80"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
                <TextBlock Text="Match markieren:" Width="100"/>
                <CheckBox IsChecked="{Binding Marked, Mode=TwoWay}" />
            </StackPanel>

            <Button Content="Speichern 💾" HorizontalAlignment="Center"
                    Command="{Binding SaveCommand}"
                    Background="#2C3E50" Foreground="White" FontWeight="Bold"
                    Padding="10,5" Margin="0,10,0,0" Width="200" BorderBrush="#3B82F6"
                    BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
