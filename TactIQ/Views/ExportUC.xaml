<UserControl x:Class="TactIQ.Views.ExportUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">

    <Border Padding="20" Background="#FFF" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel>

            <TextBlock Text="Exportoptionen" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>

            <!-- Export-Typen -->
            <GroupBox Header="Was soll exportiert werden?" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <CheckBox Content="Notizen exportieren" IsChecked="{Binding ExportNotes}" Margin="0,5"/>
                    <CheckBox Content="Matches exportieren" IsChecked="{Binding ExportMatches}" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <!-- Gegnerauswahl -->
            <GroupBox Header="Gegnerauswahl" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <ComboBox ItemsSource="{Binding Opponents}" 
                              SelectedItem="{Binding SelectedOpponent}" 
                              Width="300" 
                               />
                    <CheckBox Content="Nur markierte Einträge" IsChecked="{Binding OnlyMarked}" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Zeitraum -->
            <GroupBox Header="Zeitraum" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Von:" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding FromDate}" Width="140"/>
                    </StackPanel>

                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="Bis:" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding ToDate}" Width="140"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Export Button -->
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Left">
                <Button Content="Exportieren nach Excel" 
                        Command="{Binding ExportCommand}"
                        Width="220" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold"
                        BorderBrush="#005A9E"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
