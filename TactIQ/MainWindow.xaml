<Window x:Class="TactIQ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TactIQ.Views"
        xmlns:vm="clr-namespace:TactIQ.ViewModels"
        Title="TactIQ" Height="600" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <DataTemplate DataType="{x:Type vm:OpponentProfilesViewModel}">
            <views:OpponentProfilesUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProfileEditViewModel}">
            <views:ProfileEditUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AnalysisViewModel}">
            <views:AnalysisUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExportViewModel}">
            <views:ExportUC />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Sidebar -->
            <ColumnDefinition Width="*" />    <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="Sidebar" Background="#2C3E50" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Button Tag="Gegner" Click="NavButton_Click" Style="{StaticResource NavButtonStyle}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏆" FontSize="16" Margin="5,0"/>
                            <TextBlock x:Name="Label_Gegner" Text="Gegnerprofile" Foreground="White" Margin="10,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Analyse" Click="NavButton_Click" Style="{StaticResource NavButtonStyle}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="16" Margin="5,0"/>
                            <TextBlock x:Name="Label_Analyse" Text="Analyse" Foreground="White" Margin="10,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Export" Click="NavButton_Click" Style="{StaticResource NavButtonStyle}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📤" FontSize="16" Margin="5,0"/>
                            <TextBlock x:Name="Label_Export" Text="Export" Foreground="White" Margin="10,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                    <Button Tag="Expand" Click="NavButton_Click" Style="{StaticResource NavButtonStyle}"
                            Visibility="{Binding isSidebarCollapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶️" FontSize="16" Margin="5,0"/>
                            <TextBlock x:Name="Label_Expand" Text=">" Foreground="White" Margin="10,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Button>
                    <Button Tag="Reduce" Click="NavButton_Click" Style="{StaticResource NavButtonStyle}"
                            Visibility="{Binding isSidebarExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="◀️" FontSize="16" Margin="5,0"/>
                            <TextBlock x:Name="Label_Reduce" Text="Reduce" Foreground="White" Margin="10,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ContentControl Content="{Binding CurrentViewModel}" Grid.Column="1" x:Name="MainContent"/>
    </Grid>
</Window>
                                                                                                                                                                          